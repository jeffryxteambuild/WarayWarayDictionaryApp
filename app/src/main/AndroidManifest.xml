<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dictionary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dictionary_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dictionary_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dictionary">
        <activity android:name=".feedback"/>
        <activity android:name=".Website" />
        <activity android:name=".result" />
        <activity android:name=".toolbar" />
        <activity android:name=".sample_phrases" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>